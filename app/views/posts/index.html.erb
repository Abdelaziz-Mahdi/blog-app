<%= link_to user_path(params[:user_id]) do %>
<%= render partial: "users/user", locals: { user: User.find(params[:user_id]) } %>
<% end %>
<ul>
  <% @posts.each_with_index do |post , i| %>
    <% if post.author_id == params[:user_id].to_i %>
      <%= link_to user_post_path(params[:id].to_i, post.id) do %>
        <%= render partial: "users/post", locals: { post: post, i: i } %>
        <ul>
          <%= render partial: "posts/comment", locals: { comments: post.last_five_comments } %>
        </ul>
      <% end %>
    <% end %>
  <% end %>
</ul>

<button>Pagination</button>
