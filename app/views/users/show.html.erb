<%= link_to users_path do %>
<%= render partial: "user", locals: { user: User.find(params[:id]) } %>
<% end %>
<div>
  <h3>Bio</h3>
  <p><%= @user.bio %></p>
</div>
<ul>
  <% @user.three_most_recent_posts.each_with_index do |post , i| %>
    <%= link_to user_post_path(params[:id].to_i, post.id) do %>
     <%= render partial: "post", locals: { post: post, i: i } %>
    <% end %>
  <% end %>
</ul>
<button><%= link_to "See all posts", user_posts_path(@user) %></button>
