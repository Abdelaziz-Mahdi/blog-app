<section class="card m-3">
  <div class="card-body">
    <h5 class="card-title"><%= post.title %> #<%= i %></h5>
    <p class="card-text"><%= post.text %></p>
    <p class="card-text text-end"><small class="text-body-secondary">
      Comments: <%= post.comments_counter %>,
      Likes: <%= post.likes_counter %>
    </small></p>
  </div>
</section>
