<h2 class= 'mt-3'>Log in</h2>
<div class= 'd-flex align-items-center' style="height: 75%;">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'flex-fill'}) do |f| %>
  <div class="field mb-3">
    <%= f.label :email, class: 'form-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= f.label :password, class: 'form-label' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-3">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, class: "form-check-label" %>
    </div>
  <% end %>

  <div class="actions mb-3">
    <%= f.submit "Log in", class: "col btn btn-outline-secondary" %>
  </div>
<% end %>
</div>
<%= render "devise/shared/links" %>
